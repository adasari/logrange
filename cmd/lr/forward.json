{
  "Forwarder": {
    "Workers": [{
      "Name": "forwarder1",
      "Source": {
        "Lql": "select limit 1000",
        "Filter": ""
      },
      "Sink": {
        "Type": "syslog",
        "Params": {
          "Protocol": "tcp",
          "RemoteAddr": "127.0.0.1:5514",
          "TlsCAFile": "",
          "MessageSchema" : {
            "Facility": "local6",
            "Severity": "info",
            "Hostname": "localhost",
            "Tags": "{vars}",
            "Msg": "{msg}"
          }
        }
      }
    }],
    "StateStoreIntervalSec": 10,
    "ConfigReloadIntervalSec": 20
  },

  "Transport": {
    "ListenAddr": "127.0.0.1:9966",
    "TlsEnabled": false,
    "Tls2Way": false,
    "TlsCertFile": "/opt/logrange/lr/tls/client.crt",
    "TlsKeyFile": "/opt/logrange/lr/tls/client.key",
    "TlsCAFile": "/opt/logrange/lr/tls/ca.pem"
  },

  "Storage": {
    "Type": "file",
    "Location": "/opt/logrange/lr/storage/"
  }
}
